<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_empty" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appnameTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/appname"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/filesizeTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/filesize"
            android:textSize="8dp" />


        <TextView
            android:id="@+id/versionTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/version"
            android:textSize="8dp" />
    </LinearLayout>
    <com.alinge.market.common.view.DownloadButton
        android:id="@+id/downloadBt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textSize="14dp"
        app:backgroud_color="@color/colorPrimary"
        app:backgroud_second_color="#fff"
        app:backgroud_strokeWidth="2dp"
        app:radius="15"
        app:text_color="@color/colorPrimary"
        app:text_covercolor="#fff"/>

</RelativeLayout>